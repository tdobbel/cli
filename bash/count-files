#!/usr/bin/env bash

bold=$(tput bold)
normal=$(tput sgr0)
blue=$(tput setaf 4)

exclude=("miniforge3" "anaconda3" "." ".." ".ipython" ".cargo" ".rustup" ".local" ".cache" ".vscode*")

ntot=0
for path in * .[^.]*; do
    for ex in "${exclude[@]}"; do
        if [[ "$path" = $ex ]]; then
            continue 2
        fi
    done
    if [[ -f "$path" ]]; then
        ((ntot++))
        continue
    fi
    if [[ ! -r "$path" ]]; then
        echo "ğŸ“ ${blue}${bold}$path${normal} âœ no read permission, skipping"
        continue
    fi
    n=$(fd . "$path" -t f -E CMakeFiles -E *.pyc | wc -l)
    ntot=$((ntot + n))
    echo "ğŸ“ ${blue}${bold}$path${normal} âœ ${bold}$n${normal} files"
done
echo
echo "âœ ${bold}$ntot${normal} files found"
